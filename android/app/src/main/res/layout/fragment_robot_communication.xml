<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".robot.RobotCommunicationFragment">

    <ProgressBar
        android:id="@+id/battery"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable_battery"
        app:layout_constraintBottom_toTopOf="@+id/voltage_info"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/speed"
        app:layout_constraintHorizontal_weight="1.15"
        app:layout_constraintStart_toStartOf="parent"
        tools:progress="50" />

    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/sonar"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/battery"
        app:layout_constraintTop_toTopOf="parent"
        app:sv_backgroundCircleColor="@android:color/transparent"
        app:sv_indicatorColor="@color/colorPrimary"
        app:sv_speedBackgroundColor="@android:color/transparent"
        app:sv_speedTextColor="@android:color/transparent"
        app:sv_unit=""
        app:sv_unitUnderSpeedText="false"
        app:sv_withTremble="false" />


    <ProgressBar
        android:id="@+id/sonar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:paddingHorizontal="32dp"
        android:paddingVertical="8dp"
        android:progressDrawable="@drawable/progress_drawable_sonar"
        app:layout_constraintBottom_toTopOf="@+id/sonar_info"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1.15"
        app:layout_constraintStart_toEndOf="@+id/speed"
        tools:progress="80" />

    <TextView
        android:id="@+id/voltage_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="@string/voltageInfo"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/speed"
        app:layout_constraintEnd_toEndOf="@+id/battery"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sonar_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="@string/distanceInfo"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sonar" />

    <ImageView
        android:id="@+id/steering"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_car_steering_wheel"
        app:layout_constraintStart_toEndOf="@+id/speed"
        app:layout_constraintTop_toTopOf="@+id/speed" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="D"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/speed"
        app:layout_constraintTop_toTopOf="@+id/speed" />

    <ImageView
        android:id="@+id/indicatorLeft"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/feed_padding"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/indicator"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/indicatorRight"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/feed_padding"
        android:src="@drawable/circle"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/indicator"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/controlMode"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="5dp"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:tint="@android:color/white"
            app:backgroundTint="@color/openBotBlue"
            app:layout_constraintEnd_toStartOf="@id/driveMode"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_controller" />

        <TextView
            android:id="@+id/controlModeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/controller"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/controlMode"
            app:layout_constraintStart_toStartOf="@+id/controlMode"
            app:layout_constraintTop_toBottomOf="@+id/controlMode" />

        <ImageButton
            android:id="@+id/driveMode"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="5dp"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:tint="@android:color/white"
            app:backgroundTint="@color/openBotBlue"
            app:layout_constraintBottom_toTopOf="@+id/driveModeTitle"
            app:layout_constraintEnd_toStartOf="@id/speedMode"
            app:layout_constraintStart_toEndOf="@+id/controlMode"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dual" />

        <TextView
            android:id="@+id/driveModeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/drive_mode"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/driveMode"
            app:layout_constraintStart_toStartOf="@+id/driveMode"
            app:layout_constraintTop_toBottomOf="@+id/driveMode" />

        <ImageButton
            android:id="@+id/speedMode"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="5dp"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:tint="@android:color/white"
            app:backgroundTint="@color/openBotBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/driveMode"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_speed_high" />

        <TextView
            android:id="@+id/speedModeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/speedTitle"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/speedMode"
            app:layout_constraintStart_toStartOf="@+id/speedMode"
            app:layout_constraintTop_toBottomOf="@+id/speedMode" />

        <TextView
            android:id="@+id/control_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:padding="16dp"
            android:text="@string/control_info"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/controlModeTitle"
            app:layout_constraintEnd_toStartOf="@+id/controlMode"
            app:layout_constraintTop_toTopOf="@+id/controlMode" />

        <TextView
            android:id="@+id/speed_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/speedInfo"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/speedModeTitle"
            app:layout_constraintStart_toEndOf="@+id/speedMode"
            app:layout_constraintTop_toTopOf="@+id/speedMode" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>